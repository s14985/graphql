scalar DateTime

type Order {
	id: ID!
	status: Status
	dateCreated: DateTime
	productOrders: [ProductOrder]
	user: User
}

enum Status {
	CREATED
	FINISHED
}

extend type Mutation {
	newOrder(productOrders: [NewProductOrderInput!]!): Order
	editOrder(id: ID!, productOrders: [EditProductOrderInput]!): Order
	finishOrder(id: ID!): Order
}

extend type Query {
	findAllOrders: [Order]!
}
